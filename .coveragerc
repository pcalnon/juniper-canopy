# Coverage Configuration for CasCor Frontend
# Controls how pytest-cov measures code coverage

[run]
source = src

omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */conftest.py
    */venv/*
    */.venv/*

branch = True
parallel = True

[report]
# Show missing lines in terminal output
show_missing = True
skip_covered = False
skip_empty = True

# Coverage thresholds (standardized to 80% across all config files)
fail_under = 80

# Precision for coverage percentage
precision = 2

# Exclude lines from coverage
exclude_lines =
    # Standard exclusions
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod

    # Debugging code
    if self\.debug:
    if settings\.DEBUG

    # Defensive programming
    except Exception as e:
    except:
    pass

    # Type hints
    \.\.\.

[html]
directory = reports/coverage
title = CasCor Frontend Coverage Report

[xml]
output = coverage.xml

[json]
output = coverage.json
pretty_print = True

# Coverage targets by module
# These are aspirational - aim for these levels
[coverage:paths]
source =
    src/
    */site-packages/

# Module-specific coverage requirements (for reference)
# Critical modules should aim for 100%:
#   - config_manager.py
#   - demo_mode.py
#   - communication/websocket_manager.py
#
# Core modules should aim for 80%+:
#   - backend/
#   - logger/
#
# Frontend modules should aim for 60%+:
#   - frontend/
#   - frontend/components/
